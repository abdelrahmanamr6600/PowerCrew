<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- حالة العنصر المحدد -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#D6EAF8" /> <!-- لون أزرق فاتح -->
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#3498DB" /> <!-- حدود زرقاء -->
        </shape>
    </item>

    <!-- الحالة العادية -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- الخلفية البيضاء العادية -->
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#B0BEC5" /> <!-- حدود رمادية خفيفة -->
        </shape>
    </item>
</selector>
